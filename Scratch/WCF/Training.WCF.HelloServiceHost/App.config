<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <system.serviceModel>
        <services>
            <service name="Training.WCF.HelloService.HelloService" behaviorConfiguration="mexBehaviour">
                <endpoint address="HelloService" binding="basicHttpBinding" contract="Training.WCF.HelloService.IHelloService"></endpoint>
                <endpoint address="HelloService" binding="netTcpBinding" contract="Training.WCF.HelloService.IHelloService"></endpoint>
                <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:8080/"/>
                        <add baseAddress="net.tcp://localhost:8090/"/>
                    </baseAddresses>
                </host>
            </service>
        </services>
        <behaviors>
            <serviceBehaviors>
                <behavior name="mexBehaviour">
                    <serviceMetadata httpGetEnabled="true"/>
                </behavior>
            </serviceBehaviors>
        </behaviors>
    </system.serviceModel>
</configuration>